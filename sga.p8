-- standard galactic alphabet!

function glyphs()

	
	local addr = 0x5600 + (97 * 8)
	local x,y = 0,0
	local byte = 0
	local _p
	
	-- read a-z in sheet data.
	
 for char = 1,26 do
 
 	-- scan glyph data
 
 	for j = 0,7 do 
 		byte = 0
 		for i = 0,7 do
 	 
 	 	_p = sget(x+i,y+j)
 			if (_p != 0) byte += 2 ^ i
 			
 		end
 		
 		-- insert row data.
 		
 		poke(addr,byte)
 		addr += 1
 		
 	end
 	
 	-- go to next character.
 	x += 8
 	if (x >= 128) x = 0 y += 8
 	
 end


end

function _init()

 poke(0x5600,6)
 poke(0x5601,6)
 poke(0x5602,6)
 
 glyphs()
 
 
end

alphabet = {"a","b","c","d","1","2"}
function print_custom(str)
 poke(0x5f58,0x1 | 0x80)
 print(str)
 poke(0x5f58,0)
end

function _draw()
 cls()
 
 for char in all(alphabet) do
 
  print(char .. " = ")
  print_custom(char)
  print()
 end
 

 
end
